{
	"nodeModulesDir": "manual",
	"tasks": {
		"check": "deno fmt --check . && deno lint . && deno check",
		"dev": "vite",
		"build": "vite build",
		"start": "deno serve -A _fresh/server.js",
		"update": "deno run -A -r jsr:@fresh/update ."
	},
	"lint": { "rules": { "tags": ["fresh", "recommended"] } },
	"exclude": ["**/_fresh/*"],
	"imports": {
		"@/": "./",
		"fresh": "jsr:@fresh/core@^2.2.0",
		"preact": "npm:preact@^10.27.2",
		"@preact/signals": "npm:@preact/signals@^2.5.0",
		"@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
		"vite": "npm:vite@^7.3.1",
		"tailwindcss": "npm:tailwindcss@^4.1.10",
		"@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
		"@db/postgres": "jsr:@db/postgres@^0.19.5",
		"preact/": "https://esm.sh/preact@10.22.0/",
		"@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
		"tailwindcss/": "npm:/tailwindcss@3.4.1/",
		"tailwindcss/plugin": "npm:/tailwindcss@3.4.1/plugin.js",
		"bcrypt": "https://deno.land/x/bcrypt@v0.4.1/mod.ts",
		"djwt": "https://deno.land/x/djwt@v3.0.2/mod.ts",
		"uuid": "https://deno.land/std@0.224.0/uuid/mod.ts"
	},
	"fmt": { "semiColons": false, "useTabs": true },
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.asynciterable",
			"dom.iterable",
			"deno.ns"
		],
		"jsx": "precompile",
		"jsxImportSource": "preact",
		"jsxPrecompileSkipElements": [
			"a",
			"img",
			"source",
			"body",
			"html",
			"head",
			"title",
			"meta",
			"script",
			"link",
			"style",
			"base",
			"noscript",
			"template"
		],
		"types": [
			"vite/client"
		]
	}
}
